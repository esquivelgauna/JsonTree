<!DOCTYPE html>
<html>
    <body>
 
            <main class="container">
                <h1>
                    <%= title %>
                </h1>
                <p>Welcome to Chat
                    <%= title %>
                </p>
                <div class="container" ng-controller="Chat">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="text-primary">Mensajes de: </label>
                                        <div id="caja" class="border border-primary col pt-3 " style=" height: 400px; overflow-y: scroll;">
                                        </div>
                                        <!-- <textarea id='caja' name='caja' rows="20" class="form-control h-100" readonly='readonly'></textarea> -->
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="alert collapse" id="alBox"></div>
                                    <div class="form-group">
                                        <label for="message" class="text-success">Mensaje</label>
                                        <input type='text' id='message' name='message' class="form-control text-primary border-success">
                                    </div>
                                    <div class="form-group">
                                        <label for="nombre" class="text-primary">Nombre</label>
                                        <input type='text' id='nombre' name='nombre' class="form-control text-primary border-primary">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </main>
            <!-- <% include ./partials/footer %> -->
    </body>

</html>
